set $COLOR-INDICATOR		#679816

# color class				border					background			text					indicator 			child_border
client.focused 				$COLOR-BORDER-FOCUSED 	$COLOR-BG-FOCUSED 	$COLOR-TXT-FOCUSED 		$COLOR-INDICATOR 	$COLOR-BG-FOCUSED
client.unfocused 			$COLOR-BORDER-UNFOCUSED $COLOR-BG-UNFOCUSED $COLOR-TXT-UNFOCUSED	$COLOR-INDICATOR 	$COLOR-BG-UNFOCUSED
client.focused_inactive 	$COLOR-BORDER-UNFOCUSED $COLOR-BG-UNFOCUSED $COLOR-TXT-UNFOCUSED 	$COLOR-INDICATOR 	$COLOR-BG-UNFOCUSED

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		set $CMD_BAR i3blocks -c ~/.config/i3/i3blocks.conf
        status_command $CMD_BAR
        font pango:$FONT-FACE $FONT-SIZE
        colors {
        	background 	$COLOR-BG-FOCUSED

        	# color class 		border 					background 		 	text
        	focused_workspace 	$COLOR-BORDER-FOCUSED 	$COLOR-BG-FOCUSED 	$COLOR-TXT-FOCUSED
        	inactive_workspace 	$COLOR-BORDER-UNFOCUSED $COLOR-BG-UNFOCUSED	$COLOR-TXT-UNFOCUSED
        }
}


