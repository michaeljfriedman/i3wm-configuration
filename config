bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'python ~/.config/i3/resetworkspaces.py && i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        set $RESIZE_AMT 5

        # Pressing LEFT or j will SHRINK the window’s width.
        # Pressing RIGHT or ; will GROW the window’s width.
        # Pressing DOWN or l will SHRINK the window’s height.
        # Pressing UP or k will GROW the window’s height.
        bindsym j resize shrink width $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym k resize grow height $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym l resize shrink height $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym semicolon resize grow width $RESIZE_AMT px or $RESIZE_AMT ppt

        # same bindings for the arrow keys
        bindsym Left resize shrink width $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym Up resize grow height $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym Down resize shrink height $RESIZE_AMT px or $RESIZE_AMT ppt
        bindsym Right resize grow width $RESIZE_AMT px or $RESIZE_AMT ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

