# Screen lock and suspend
set $CMD_LOCK gnome-screensaver-command --lock
set $CMD_SUSPEND sudo pm-suspend
bindsym $mod+Shift+s exec $CMD_LOCK && $CMD_SUSPEND
bindsym $mod+Shift+x exec $CMD_LOCK

# Enable volume buttons
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle

# Enable brightness buttons
bindsym XF86MonBrightnessUp exec xbacklight -steps 5 -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -steps 5 -dec 5

# Reset workspaces to their default names
bindsym $mod+Shift+w exec python ~/.config/i3/resetworkspaces.py && i3-msg reload && i3-nagbar -t warning -m "Reset all workspace names"

